ScreenManager:

    Screen:
        name: 'login'

        MDLabel:
            id: welcome_label
            text: "Login"
            font_size: 28
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .9}

        MDTextFieldRound:
            id: user
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": .5, "center_y": .6}

        MDTextFieldRound:
            id: password
            hint_text: "Password"
            icon_right: "key"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": .5, "center_y": .5}
            password: True

        MDRoundFlatButton:
            text: "Ok"
            font_size: 12
            pos_hint: {"center_x": .5, "center_y": .3}
            on_press: app.start()

        MDRoundFlatButton:
            text: "Close"
            font_size: 12
            pos_hint: {"center_x": .5, "center_y": .2}
            on_press: app.stop()

    Screen:
        name: 'menu'

        MDTextField:
            id: textbox
            hint_text: "Enter group name"
            required: True
            helper_text: "Enter group"
            helper_text_mode: "on_error"
            icon_right: "android"
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: None
            width: 300
            max_text_length: 10

        MDRectangleFlatButton:
            text: "OK"
            icon: "folder"
            pos_hint: {'center_x':.5,'center_y':.4}
            on_press: app.show_data()

    Screen:
        name: 'processing'

        MDLabel:
            text: 'Please provide images'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .6}

        MDFloatLayout:
            MDRoundFlatIconButton:
                text: "Open manager"
                icon: "folder"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: app.file_manager_open()

        MDRectangleFlatButton:
            text: 'Back'
            pos_hint: {'center_x':.4,'center_y':.1}
            on_press: root.current = 'menu'

        MDRectangleFlatButton:
            text: "OK"
            icon: "folder"
            pos_hint: {'center_x':.6,'center_y':.1}
            on_press:
                root.current = 'table'
                app.show_table()

    Screen:
        id: data_scr
        name: 'table'

    Screen:
        name: 'check'