ScreenManager:

    MDScreen:
        name: 'login'
        md_bg_color: app.theme_cls.bg_light

        MDFloatLayout:

            Image:
                source: "login.gif"
                anim_delay: 1/24
                pos_hint: {"x": 0, "y": 0.23}

            MDLabel:
                font_style: "H6"
                text: "Authentication"
                pos_hint: {"center_x": .5, "center_y": .46}
                valign: 'middle'
                halign: 'center'

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .38}

                MDTextField:
                    id: user
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: "Username"
                    size_hint_x: 1
                    size_hint_y: None
                    icon_right: "account"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .27}

                MDTextField:
                    id: password
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: "Password"
                    password: True
                    size_hint_x: 1
                    size_hint_y: None
                    icon_right: "key"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False

            MDTextButton:
                font_style: "Overline"
                text: "Forgot your password?"
                pos_hint: {"center_x": .5, "center_y": .2}
                on_press: app.show_information()

            MDRoundFlatButton:
                font_style: "Button"
                text: "Login"
                size_hint_x: .75
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .14}
                on_press: app.start()

            MDRoundFlatButton:
                font_style: "Button"
                text: "Close"
                size_hint_x: .25
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .05}
                on_press: app.stop()

    MDScreen:
        name: 'menu'
        md_bg_color: app.theme_cls.bg_light

        MDFloatLayout:

            Image:
                source: "process.gif"
                anim_delay: 1/30
                pos_hint: {"x": 0, "y": .23}

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .38}

                MDTextField:
                    id: textbox
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: "Enter group name"
                    required: True
                    error_color: 'brown'
                    #helper_text: "Enter value to process student's activity"
                    #helper_text_mode: "on_error"
                    icon_right: "account-group"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: 1
                    size_hint_y: None
                    multiline: False
                    max_text_length: 10

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .27}

                MDTextField:
                    id: textbox_week_number
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: 'Enter week number'
                    required: False
                    error_color: 'brown'
                    #helper_text: 'Enter week number'
                    #helper_text_mode: "on_error"
                    icon_right: "calendar-blank"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: 1
                    size_hint_y: None
                    multiline: False
                    max_text_length: 2

            MDRoundFlatButton:
                font_style: "Button"
                text: "OK"
                size_hint_x: .75
                size_hint_y: None
                pos_hint: {'center_x':.5,'center_y':.14}
                on_press: app.show_data()

            MDRoundFlatButton:
                font_style: "Button"
                text: "Back"
                size_hint_x: .25
                size_hint_y: None
                pos_hint: {'center_x':.5,'center_y':.05}
                on_press: root.current = 'login'

    MDScreen:
        name: 'processing'
        md_bg_color: app.theme_cls.bg_light

        MDLabel:
            font_style: "Subtitle1"
            text: 'Please provide images'
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .9}

        MDRoundFlatIconButton:
            font_style: "Button"
            icon: "file"
            text: "Open manager"
            pos_hint: {'center_x': .5, 'center_y': .75}
            on_press: app.file_manager_open()

        MDLabel:
            id: file1
            text: f'1 file: '
            font_style: "Subtitle1"
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .6}

        MDLabel:
            id: file2
            text: f'2 file: '
            font_style: "Subtitle1"
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .5}

        MDRoundFlatButton:
            font_style: "Button"
            text: 'Back'
            pos_hint: {'center_x':.3,'center_y':.1}
            on_press: root.current = 'menu'

        MDRoundFlatButton:
            font_style: "Button"
            text: "OK"
            pos_hint: {'center_x':.7,'center_y':.1}
            on_press:
                root.current = 'table'
                app.show_table()

    MDScreen:
        id: data_scr
        name: 'table'
        md_bg_color: app.theme_cls.bg_light

    MDScreen:
        name: 'check'
        md_bg_color: app.theme_cls.bg_light