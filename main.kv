ScreenManager:

    Screen:
        name: 'login'

        MDFloatLayout:
            md_bg_color: app.theme_cls.bg_light

            Image:
                source: "login.gif"
                anim_delay: 1/24
                pos_hint: {"x": 0, "y": 0.23}

            MDLabel:
                font_style: "H6"
                text: "Authentication"
                pos_hint: {"center_x": .5, "center_y": .46}
                valign: 'middle'
                halign: 'center'

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .38}

                MDTextField:
                    id: user
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: "Username"
                    size_hint_x: 1
                    size_hint_y: None
                    icon_right: "account"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False

            MDFloatLayout:
                size_hint_x: .95
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .27}

                MDTextField:
                    id: password
                    #hint_text_color_normal: 0,0,0,1
                    #hint_text_color_focus: 0,0,0,1
                    #line_color_normal: 0,0,0,1
                    #line_color_focus: 0,0,0,1
                    #text_color_normal: 0,0,0,1
                    text_color_focus: 0,0,0,1
                    color_mode: "custom"
                    mode: "fill"
                    hint_text: "Password"
                    password: True
                    size_hint_x: 1
                    size_hint_y: None
                    icon_right: "key"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False

            MDTextButton:
                font_style: "Overline"
                text: "Forgot your password?"
                pos_hint: {"center_x": .5, "center_y": .2}
                on_press: app.show_information()

            MDRoundFlatButton:
                font_style: "Button"
                text: "Login"
                size_hint_x: .75
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .14}
                on_press: app.start()

            MDRoundFlatButton:
                font_style: "Button"
                text: "Close"
                size_hint_x: .25
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": 0.05}
                on_press: app.stop()

    Screen:
        name: 'menu'

        MDFloatLayout:
            size_hint_x: .95
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTextField:
                id: textbox
                mode: "fill"
                hint_text: "Enter group name"
                required: True
                error_color: 'brown'
                #helper_text: "Enter value to process student's activity"
                #helper_text_mode: "on_error"
                icon_right: "account-group"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: 1
                size_hint_y: None
                multiline: False
                max_text_length: 10

        MDFloatLayout:
            size_hint_x: .95
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .35}

            MDTextField:
                id: textbox_week_number
                mode: "fill"
                hint_text: 'Enter week number'
                required: False
                error_color: 'brown'
                #helper_text: 'Enter week number'
                #helper_text_mode: "on_error"
                icon_right: "calendar-blank"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: 1
                size_hint_y: None
                multiline: False
                max_text_length: 2

        MDRoundFlatButton:
            font_style: "Button"
            text: "OK"
            pos_hint: {'center_x':.3,'center_y':.2}
            on_press: app.show_data()

        MDRoundFlatButton:
            font_style: "Button"
            text: "Back"
            pos_hint: {'center_x':.7,'center_y':.2}
            size_hint: None, None
            on_press: root.current = 'login'

    Screen:
        name: 'processing'

        MDLabel:
            font_style: "Subtitle1"
            text: 'Please provide images'
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .9}


        MDLabel:
            font_style: "Subtitle1"
            #text: 'Left image:\n"{}"'.format()
            text: 'Left image \n ...'
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .6}

        MDLabel:
            font_style: "Subtitle1"
            #text: 'Right image:\n"{}"'.format()
            text: 'Right image \n ...'
            valign: 'middle'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .5}

        MDRoundFlatIconButton:
            font_style: "Button"
            icon: "file"
            text: "Open manager"
            pos_hint: {'center_x': .5, 'center_y': .75}
            on_press: app.file_manager_open()

        MDRoundFlatButton:
            font_style: "Button"
            text: 'Back'
            pos_hint: {'center_x':.3,'center_y':.1}
            on_press: root.current = 'menu'

        MDRoundFlatButton:
            font_style: "Button"
            text: "OK"
            pos_hint: {'center_x':.7,'center_y':.1}
            on_press:
                root.current = 'table'
                app.show_table()

    Screen:
        id: data_scr
        name: 'table'

    Screen:
        name: 'check'