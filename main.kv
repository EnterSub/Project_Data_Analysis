ScreenManager:

    Screen:
        name: 'login'

        MDFloatLayout:
            mg_bg_color: 1, 1, 1, 1
            Image:
                source: "Login.png"
                pos_hint: {"y": .25}
            MDLabel:
                text: "Log In"
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
            MDFloatLayout:
                size_hint_x: .9
                size_hint_y: .1
                pos_hint: {"center_x": .5, "center_y": .4}
                canvas:
                    Color:
                        rgb: (245/255, 245/255, 245/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextField:
                    id: user
                    hint_text: "Username"
                    size_hint_x: 0.9
                    size_hint_y: None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False
                    cursor_width: "2sp"
                    background_color: 0, 0, 0, 0
                    padding: 15
            MDFloatLayout:
                size_hint_x: .9
                size_hint_y: .1
                pos_hint: {"center_x": .5, "center_y": .28}
                canvas:
                    Color:
                        rgb: (245/255, 245/255, 245/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    size_hint_x: 0.9
                    size_hint_y: None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    multiline: False
                    cursor_width: "2sp"
                    background_color: 0, 0, 0, 0
                    padding: 15
            MDTextButton:
                text: "Forgot your password?"
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": .5, "center_y": .2}
                on_press: print()
            MDRoundFlatButton:
                text: "LOGIN"
                size_hint_x: .5
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .12}
                background_color: 1, 1, 1, 1
                on_press: app.start()
            MDRoundFlatButton:
                text: "CLOSE"
                size_hint_x: .5
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .05}
                background_color: 1, 1, 1, 1
                on_press: app.stop()

    Screen:
        name: 'menu'

        MDTextField:
            id: textbox
            hint_text: "Enter group name"
            required: True
            helper_text: "Enter value for processing student activity data"
            helper_text_mode: "on_error"
            icon_right: "android"
            pos_hint: {'center_x': .5, 'center_y': .6}
            size_hint_x: None
            width: 300
            max_text_length: 10

        MDTextField:
            id: textbox_week_number
            hint_text: "Enter week number"
            required: False
            helper_text: "Enter value for processing student activity data"
            helper_text_mode: "on_error"
            icon_right: "android"
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_x: None
            width: 300
            max_text_length: 2

        MDRectangleFlatButton:
            text: "OK"
            icon: "folder"
            pos_hint: {'center_x':.4,'center_y':.4}
            on_press: app.show_data()

        MDRectangleFlatButton:
            text: "Back"
            icon: "folder"
            pos_hint: {'center_x':.6,'center_y':.4}
            on_press: app.button_screen_back_to_login()

    Screen:
        name: 'processing'

        MDLabel:
            text: 'Please provide images'
            halign: 'center'
            pos_hint: {"center_x": .5, "center_y": .6}

        MDFloatLayout:
            MDRoundFlatIconButton:
                text: "Open manager"
                icon: "folder"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: app.file_manager_open()

        MDRectangleFlatButton:
            text: 'Back'
            pos_hint: {'center_x':.4,'center_y':.1}
            on_press: root.current = 'menu'

        MDRectangleFlatButton:
            text: "OK"
            icon: "folder"
            pos_hint: {'center_x':.6,'center_y':.1}
            on_press:
                root.current = 'table'
                app.show_table()

    Screen:
        id: data_scr
        name: 'table'

    Screen:
        name: 'check'